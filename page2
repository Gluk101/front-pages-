  <script>
    function getProtection() {
      return document.querySelector('input[name="changeProt"]:checked').value;
    }
    function getWebPW() {
      return document.querySelector('input[name="webPw"]:checked').value;
    }

    // Security Key Generator and QR Logic
    const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz23456789!@#$%^&*()-_=+[]{}:?';
    let qrObj = null;

    function updateQR(text) {
      const qrDiv = document.getElementById('secKeyQR');
      if (!qrObj) {
        qrObj = new QRCodeStyling({
          width: 120,
          height: 120,
          type: "svg",
          data: text,
          dotsOptions: { color: "#2684ff", type: "rounded" },
          backgroundOptions: { color: "#181b1e" },
          cornersSquareOptions: { color: "#fff", type: "extra-rounded" },
          cornersDotOptions: { color: "#2684ff", type: "dot" }
        });
      }
      qrObj.update({ data: text || " " });
      qrDiv.innerHTML = "";
      qrObj.append(qrDiv);
    }

    function onRecoveryKeyChange() {
      const text = document.getElementById('secKey').value.trim();
      updateQR(text);
    }

    function generateSecKey(length = 16) {
      let key = '';
      for (let i = 0; i < length; i++) key += chars.charAt(Math.floor(Math.random() * chars.length));
      const secKeyEl = document.getElementById('secKey');
      secKeyEl.value = key;
      onRecoveryKeyChange();
      document.getElementById('recoveryWarning').classList.remove('hidden'); // SHOW warning
    }

    function copySecKey() {
      const input = document.getElementById('secKey');
      if (!input.value) return;
      if (navigator.clipboard) navigator.clipboard.writeText(input.value);
      else { input.select(); document.execCommand('copy'); }
    }

    function saveQRImg() {
      if (qrObj) qrObj.download({ name: "RecoveryKeyQR", extension: "png" });
    }

    document.getElementById('secKey').addEventListener('input', onRecoveryKeyChange);

    // Enable/disable fields & show standby QR if nothing is needed
    function updateFields() {
      const protection = getProtection();
      const webPW = getWebPW();
      const needsPassword = (webPW === "yes") || (protection === "password");
      const needsPin = protection === "pin";
      const needsRecovery = needsPassword || needsPin;

      document.getElementById('setupPassword').disabled = !needsPassword;
      document.getElementById('setupPassword2').disabled = !needsPassword;
      document.getElementById('setupPin').disabled = !needsPin;

      document.getElementById('secKey').disabled = !needsRecovery;
      document.getElementById('autoGenBtn').disabled = !needsRecovery;
      document.getElementById('copyCodeBtn').disabled = !needsRecovery;
      document.getElementById('saveQRBtn').disabled = !needsRecovery;

      if (!needsRecovery) {
        document.getElementById('secKey').value = '';
        updateQR("", true);
        document.getElementById('recoveryWarning').classList.add('hidden'); // HIDE warning when not needed
      } else {
        onRecoveryKeyChange();
      }
    }

    document.querySelectorAll('input[name="webPw"],input[name="changeProt"]').forEach(el => {
      el.addEventListener('change', updateFields);
    });
    window.onload = updateFields;

    function saveSetup() {
      document.getElementById('setupResult').innerText = "✅ Settings saved! (implement your handler here)";
      setTimeout(() => { document.getElementById('setupResult').innerText = ""; }, 3000);
    }
    function resetSetup() {
      document.getElementById('thermoSetupForm').reset();
      document.getElementById('setupPassword').value = '';
      document.getElementById('setupPassword2').value = '';
      document.getElementById('setupPin').value = '';
      document.getElementById('secKey').value = '';
      document.getElementById('setupResult').innerText = "";
      document.getElementById('recoveryWarning').classList.add('hidden'); // HIDE warning on reset
      updateFields();
    }
  </script>
</body>
